<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible"
        android:weightSum="9">

        <ImageView
            android:id="@+id/celebImageView"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/johnny_bravo4" />

        <GridLayout
            android:id="@+id/buttonsGridLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="4"
            android:layout_weight="3">

            <Button
                android:id="@+id/button0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_margin="10dp"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_weight="1"
                android:alpha="0.7"
                android:background="@android:color/holo_orange_light"
                android:gravity="fill"
                android:onClick="chooseAnswer"
                android:padding="10dp"
                android:tag="0"
                android:text="Button0egfdgdfg"
                android:textAlignment="center"
                android:textSize="14sp" />

            <Button
                android:id="@+id/button1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_margin="10dp"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_weight="1"
                android:alpha="0.7"
                android:background="@android:color/holo_green_light"
                android:gravity="fill"
                android:onClick="chooseAnswer"
                android:padding="10dp"
                android:tag="1"
                android:text="B"
                android:textAlignment="center"
                android:textSize="14sp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_margin="10dp"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:layout_weight="1"
                android:alpha="0.7"
                android:background="@android:color/holo_blue_light"
                android:gravity="fill"
                android:onClick="chooseAnswer"
                android:padding="10dp"
                android:tag="2"
                android:text="Butdfgergerfgfegfegtfegfdgrgegton2"
                android:textAlignment="center"
                android:textSize="14sp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_margin="10dp"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:layout_weight="1"
                android:alpha="0.7"
                android:background="@android:color/holo_red_light"
                android:gravity="fill"
                android:onClick="chooseAnswer"
                android:padding="10dp"
                android:tag="3"
                android:text="Button3"
                android:textAlignment="center"
                android:textSize="14sp" />

        </GridLayout>

        <TextView
            android:id="@+id/resultTextView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_above="@+id/buttonsGridLayout"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@android:color/background_light"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="36sp"
            android:visibility="invisible" />

    </LinearLayout>

    <ImageView
        android:id="@+id/startImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:onClick="start"
        android:visibility="invisible"
        app:srcCompat="@drawable/start" />

</RelativeLayout>
